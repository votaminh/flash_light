<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray05"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/toolbar_language"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"
            android:src="@drawable/ic_back"
            app:tint="@color/black"
            android:padding="@dimen/size13"
            />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextView.Header.Header1"
            android:layout_centerInParent="true"
            android:text="Tieng cho" />

        <ImageView
            android:id="@+id/tvApply"
            android:layout_width="@dimen/size40"
            android:layout_height="@dimen/size40"
            android:src="@drawable/ic_done_language"
            app:tint="@color/main"
            android:layout_alignParentRight="true"
            android:padding="@dimen/size7"
            android:layout_marginRight="@dimen/size7"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imvCurrentSound"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size100"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size24"
                android:adjustViewBounds="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size32"
                >

                <TextView
                    android:id="@+id/tv_15s"
                    android:text="15s"
                    style="@style/TextView.Body.Body1"
                    android:layout_centerInParent="true"
                    android:textColor="@color/gray5"
                    android:paddingHorizontal="@dimen/size16"
                    android:paddingVertical="@dimen/size5"
                    />
                <TextView
                    android:id="@+id/tv_30s"
                    android:text="30s"
                    style="@style/TextView.Body.Body1"
                    android:layout_centerInParent="true"
                    android:textColor="@color/gray5"
                    android:paddingHorizontal="@dimen/size16"
                    android:paddingVertical="@dimen/size5"
                    />
                <TextView
                    android:id="@+id/tv_1m"
                    android:text="@string/txt_1m"
                    style="@style/TextView.Body.Body1"
                    android:layout_centerInParent="true"
                    android:textColor="@color/gray5"
                    android:paddingHorizontal="@dimen/size16"
                    android:paddingVertical="@dimen/size5"
                    />
                <TextView
                    android:id="@+id/tv_2m"
                    android:text="@string/txt_2m"
                    style="@style/TextView.Body.Body1"
                    android:layout_centerInParent="true"
                    android:textColor="@color/gray5"
                    android:paddingHorizontal="@dimen/size16"
                    android:paddingVertical="@dimen/size5"
                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ivPlay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size40"
                android:background="@drawable/bg_main_round20"
                android:layout_marginTop="@dimen/size32"
                android:layout_marginHorizontal="@dimen/size16">

                <ImageView
                    android:id="@+id/imvPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play_sound"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/fl_adplaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="@dimen/size20"
                android:layout_marginVertical="@dimen/size10"
                >
                <include
                    android:id="@+id/native_ad_view"
                    layout="@layout/ad_unified"/>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size20"
                android:layout_marginBottom="@dimen/size20"
                app:cardCornerRadius="@dimen/size20"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/size18"
                    android:paddingVertical="@dimen/size10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/size20"
                            android:layout_height="@dimen/size20"
                            android:src="@drawable/ic_flash"
                            android:layout_centerVertical="true"
                            />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_flash"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size56"
                            android:checked="true"
                            android:text="@string/txt_flash"
                            android:thumb="@drawable/selector_switch_thumb"
                            app:splitTrack="false"
                            app:track="@drawable/selector_switch_track"
                            style="@style/TextView.Header.Header2"
                            android:layout_marginLeft="@dimen/size30"
                            />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/size20"
                            android:layout_height="@dimen/size20"
                            android:src="@drawable/ic_vibration_setting"
                            android:layout_centerVertical="true"
                            app:tint="@color/black" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_vibration"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size56"
                            android:checked="false"
                            android:text="@string/txt_vibration"
                            android:thumb="@drawable/selector_switch_thumb"
                            app:track="@drawable/selector_switch_track"
                            style="@style/TextView.Header.Header2"
                            android:layout_marginLeft="@dimen/size30"
                            />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/size20"
                            android:layout_height="@dimen/size20"
                            android:src="@drawable/ic_audio"
                            android:layout_centerVertical="true"
                            app:tint="@color/black" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_sound"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size56"
                            android:checked="false"
                            android:text="@string/txt_sound"
                            android:thumb="@drawable/selector_switch_thumb"
                            app:track="@drawable/selector_switch_track"
                            style="@style/TextView.Header.Header2"
                            android:layout_marginLeft="@dimen/size30"
                            />
                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/seekbar_volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="@dimen/size16"
                        android:thumbTint="@color/main"
                        android:progress="50"
                        android:progressTint="@color/main"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
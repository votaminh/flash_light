<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_app"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size64"
            android:layout_gravity="center"
            android:text="@string/txt_setting"
            android:textColor="@color/white"
            android:textSize="@dimen/size20"
            android:gravity="center"
            android:background="@color/bg_dark_app"
            />

        <LinearLayout
            style="@style/LayoutContainFeature"
            android:layout_marginHorizontal="@dimen/size10"
            android:layout_marginLeft="@dimen/size7"
            android:layout_marginRight="@dimen/size7"
            android:layout_marginBottom="@dimen/size20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_advanced"
                style="@style/tv_header_1"
                android:layout_marginTop="@dimen/size10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:background="@drawable/corner_16_light_background"
                android:paddingHorizontal="@dimen/size10"
                android:paddingVertical="@dimen/size5"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size52"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_light_mode"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_do_not_flash_when_screen"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14"
                        android:layout_marginHorizontal="@dimen/size10"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swNotFlashWhenScreenOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/layout_switch_thumb"
                        app:track="@drawable/layout_switch_track" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size52"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_battery"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_save_battery"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size14"
                            android:layout_marginHorizontal="@dimen/size10"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_turn_off_flash_battery"
                            android:textColor="#00C582"
                            android:textSize="@dimen/size14"
                            android:layout_marginHorizontal="@dimen/size10"
                            />
                    </LinearLayout>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swNotFlashWhenLowBattery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/layout_switch_thumb"
                        app:track="@drawable/layout_switch_track" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            style="@style/LayoutContainFeature"
            android:layout_marginHorizontal="@dimen/size10"
            android:layout_marginLeft="@dimen/size7"
            android:layout_marginRight="@dimen/size7"
            android:layout_marginBottom="@dimen/size20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_flash_when_phone"
                style="@style/tv_header_1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:background="@drawable/corner_16_light_background"
                android:paddingHorizontal="@dimen/size10"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size52"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_normal_setting"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_normal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14"
                        android:layout_marginHorizontal="@dimen/size10"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swFlashInNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/layout_switch_thumb"
                        app:track="@drawable/layout_switch_track" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size52"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_vibration"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_vibrate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14"
                        android:layout_marginHorizontal="@dimen/size10"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swFlashInVibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/layout_switch_thumb"
                        app:track="@drawable/layout_switch_track" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size52"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_volume_off" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/size10"
                        android:layout_weight="1"
                        android:text="@string/txt_silent"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swFlashInSilent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/layout_switch_thumb"
                        app:track="@drawable/layout_switch_track" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:background="@drawable/corner_16_light_background"
                android:paddingHorizontal="@dimen/size10"
                android:paddingVertical="@dimen/size5"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/policy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size52"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_privacy"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_policy"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14"
                        android:layout_marginHorizontal="@dimen/size10"
                        />
                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_arrow_right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size52"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_share"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14"
                        android:layout_marginHorizontal="@dimen/size10"
                        />
                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_arrow_right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/language"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size52"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_language"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/txt_language"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14"
                        android:layout_marginHorizontal="@dimen/size10"
                        />

                    <ImageView
                        android:layout_width="@dimen/size24"
                        android:layout_height="@dimen/size24"
                        android:src="@drawable/ic_arrow_right"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ntcFla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size15"
                android:text="@string/txt_flash_light"
                android:textColor="#ffffff"
                android:textSize="@dimen/size26" />

            <ImageView
                android:id="@+id/btnTurnOnFlash"
                android:layout_width="@dimen/size120"
                android:layout_height="@dimen/size120"
                android:layout_marginTop="@dimen/size20"
                android:src="@drawable/ic_turn_off_flash_light" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size20">

                <LinearLayout
                    style="@style/LayoutContainFeature"
                    android:layout_marginHorizontal="@dimen/size10"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_marginBottom="@dimen/size20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size5"
                        android:layout_marginTop="@dimen/size5"
                        android:text="@string/txt_flashing"
                        android:textColor="#fbfbfb"
                        android:textSize="@dimen/size16" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size10">

                        <TextView
                            style="@style/CustomTextViewFeature12sp"
                            android:layout_toStartOf="@+id/secondOnTime"
                            android:text="@string/txt_on_time" />

                        <TextView
                            android:id="@+id/secondOnTime"
                            style="@style/CustomTextViewFeature12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="#fbfbfb" />

                        <SeekBar
                            android:id="@+id/sbOnTime"
                            style="@style/CustomSeekbar"
                            android:layout_below="@+id/secondOnTime" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size10">

                        <TextView
                            style="@style/CustomTextViewFeature12sp"
                            android:layout_toStartOf="@+id/secondOffTime"
                            android:text="@string/txt_off_time" />

                        <TextView
                            android:id="@+id/secondOffTime"
                            style="@style/CustomTextViewFeature12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="#fbfbfb" />

                        <SeekBar
                            android:id="@+id/sbOffTime"
                            style="@style/CustomSeekbar"
                            android:layout_below="@+id/secondOffTime" />
                    </RelativeLayout>
                </LinearLayout>

                <include
                    android:id="@+id/layoutLock"
                    layout="@layout/layout_lock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

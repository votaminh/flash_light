<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/size6" />
            <gradient android:endColor="#BB3C0A" android:startColor="#FCA754" android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size6" />
            <solid android:color="@color/colorBackground" />
            <stroke android:width="1dp" android:color="@color/colorDisable" />
        </shape>
    </item>
</selector>